{
  "asar": true,
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "package.json",
    {
      "from": "dist",
      "to": ".",
      "filter": ["**/*"]
    }  ],
  "win": {
    "icon": "dist/assets/icons/icon.ico",
    "target": ["portable"]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons/icon.icns",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons/icon.png",
    "target": ["AppImage"]
  }
}
