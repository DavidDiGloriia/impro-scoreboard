{
  "appId": "com.electron.improvisation-be-app",
  "productName": "improvisation-be-app",
  "asar": true,
  "directories": {
    "output": "release"
  },
  "files": [
    "main.js",
    "package.json",
    "preload.js",
    {
      "from": "dist",
      "to": ".",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "icon": "dist/assets/icons/icon.ico",
    "target": ["nsis"]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "IMPROVISATION.BE App - Installateur.exe"
  },
  "mac": {
    "icon": "dist/assets/icons/icon.icns",
    "target": ["dmg"],
    "artifactName": "IMPROVISATION.BE-App.${ext}"
  },
  "linux": {
    "icon": "dist/assets/icons/icon.png",
    "target": ["AppImage"]
  }
}